			$('#description').addClass('border_class');
		}
		if (!$('#start_date input').val()) {
			$('#start_date').addClass('border_class');
		}
		if (!$('#end_date input').val()) {
			$('#end_date').addClass('border_class');
		}
		if (!$('#url input').val()) {
			$('#url').addClass('border_class');
		}
