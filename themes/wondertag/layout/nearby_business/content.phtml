<script>
	var planes = [];
	var markersArray = [];
	$.getScript('<?php echo $wo['config']['theme_url'];?>/javascript/leaflet.js?version=<?php echo $wo['config']['version']; ?>', function(data, textStatus) {
		<?php foreach ($nearby_users as $user) : ?>
