					{
						var product_reader = new FileReader();
						var ii = 0;
						product_reader.onload = function(e) {
						name = "'"+$("#edit-post-post-photos-<?php echo $wo['story']['id']; ?>")[0].files[ii].name+"'";
						src = "'"+e.target.result+"'";
